{block title}{_messages.app.courses}{/block}

{block content}
<div class="row content">
	<div class="columns">
		<ul class="courses">
			<li n:foreach="$courses as $course">
				<h3><a n:href="Course:default $course->id">{$course->name|imd|noescape}</a></h3>
				{$course->goals|md|noescape}
				<p><a n:href="Course:enrolled, $course->id">{_messages.course.totalEnrolled, [count => count($course->entity->enrollments)]}</a></p>
			</li>
		</ul>
	</div>
</div>
{/block}
